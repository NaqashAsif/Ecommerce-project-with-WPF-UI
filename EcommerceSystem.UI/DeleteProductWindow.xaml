<Window x:Class="EcommerceSystem.UI.DeleteProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcommerceSystem.UI"
        mc:Ignorable="d"
          Title="Delete Product" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Delete Product" FontSize="16" FontWeight="Bold" Margin="10,0,10,10"/>
            <TextBlock x:Name="IdPlaceholder" Text="Enter Product ID" Foreground="Gray" Margin="10,0,10,10"/>
            <TextBox x:Name="IdTextBox" Width="200" Margin="10,0,10,10" TextChanged="IdTextBox_TextChanged"/>
            <Button Content="Delete Product" Width="150" Margin="10,10,10,10" Click="DeleteProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>
