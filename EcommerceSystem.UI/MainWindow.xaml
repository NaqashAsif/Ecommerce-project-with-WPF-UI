<Window x:Class="EcommerceSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcommerceSystem.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Ecommerce System" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="Admin" Width="150" Height="40" Margin="10" Click="AdminButton_Click"/>
            <Button Content="Customer" Width="150" Height="40" Margin="10" Click="CustomerButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
