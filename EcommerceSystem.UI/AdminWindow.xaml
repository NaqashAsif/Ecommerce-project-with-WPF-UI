<Window x:Class="EcommerceSystem.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcommerceSystem.UI"
        mc:Ignorable="d"
        Title="Admin Panel" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Admin Panel - Product Management" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="Add Product" Width="200" Height="40" Margin="10" Click="AddProduct_Click"/>
            <Button Content="View Products" Width="200" Height="40" Margin="10" Click="ViewProducts_Click"/>
            <Button Content="Update Product" Width="200" Height="40" Margin="10" Click="UpdateProduct_Click"/>
            <Button Content="Delete Product" Width="200" Height="40" Margin="10" Click="DeleteProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>
